<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingTop = "10dp"
    android:paddingBottom = "10dp" >
    <LinearLayout
        android:layout_width = "0dp"
        android:layout_height = "fill_parent"
        android:layout_weight = "1"
        android:orientation = "vertical"
        android:paddingLeft = "10dp"
        android:paddingRight = "5dp" >
        <RelativeLayout
            android:layout_width = "fill_parent"
            android:layout_height = "0dp"
            android:orientation = "vertical"
            android:layout_weight = "1" >
            <Button
                android:id="@+id/top_up"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent = "true"
                android:text="Top up" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width = "fill_parent"
            android:layout_height = "0dp"
            android:orientation = "vertical"
            android:layout_weight = "1" >
            <Button
	            android:id="@+id/pay"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent = "true"
	            android:text="Pay"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width = "fill_parent"
            android:layout_height = "0dp"
            android:orientation = "vertical"
            android:layout_weight = "1" >
            <Button
	            android:id="@+id/my_acct"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent = "true"
	            android:text="My Account"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width = "0dp"
        android:layout_height = "fill_parent"
        android:layout_weight = "2"
        android:paddingLeft = "5dp"
        android:paddingRight = "10dp"
        android:orientation = "horizontal" >
        <RelativeLayout
	        android:layout_width = "0dp"
	        android:layout_height = "fill_parent"
	        android:layout_weight = "1"
	        android:orientation = "vertical" >
            <!--For the Pay Menu -->
            <LinearLayout 
                android:layout_width = "fill_parent"
                android:layout_height = "fill_parent"
                android:orientation = "vertical">
                <RelativeLayout
                    android:layout_width = "fill_parent"
                    android:layout_height = "0dp"
                    android:layout_weight = "1" >
                    <Button
			            android:id="@+id/bill_pay"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_centerInParent = "true"
			            android:text="Bill" 
			            android:visibility = "invisible"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width = "fill_parent"
                    android:layout_height = "0dp"
                    android:layout_weight = "1" >
                    <Button
			            android:id="@+id/otc"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_centerInParent = "true"
			            android:text="Business" 
			            android:visibility = "invisible"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width = "fill_parent"
                    android:layout_height = "0dp"
                    android:layout_weight = "1" >
                    <Button
			            android:id="@+id/p2p"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_centerInParent = "true"
			            android:text="Person" 
			            android:visibility = "invisible"/>
                </RelativeLayout>]
            </LinearLayout>
            <!--For the Account Menu -->
            <LinearLayout 
                android:layout_width = "fill_parent"
                android:layout_height = "fill_parent"
                android:orientation = "vertical">
                <RelativeLayout
                    android:layout_width = "fill_parent"
                    android:layout_height = "0dp"
                    android:layout_weight = "1" >

                    <Button
                        android:id="@+id/wallet"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent = "true"
                        android:text="Wallet"
                        android:visibility="invisible" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width = "fill_parent"
                    android:layout_height = "0dp"
                    android:layout_weight = "1" >
                    <Button
			            android:id="@+id/bank_accounts"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_centerInParent = "true"
			            android:text="Banks" 
			            android:visibility = "invisible"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width = "fill_parent"
                    android:layout_height = "0dp"
                    android:layout_weight = "1" >
                    <Button
			            android:id="@+id/paypal"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_centerInParent = "true"
			            android:text="Paypal" 
			            android:visibility = "invisible"/>                    
                </RelativeLayout>               
            </LinearLayout>	        	        
	    </RelativeLayout>
        <RelativeLayout
	        android:layout_width = "0dp"
	        android:layout_height = "fill_parent"
	        android:layout_weight = "1"
	        android:orientation = "vertical" >
            <LinearLayout
                android:layout_width = "fill_parent"
                android:layout_height = "fill_parent"
                android:orientation = "vertical" >
                <RelativeLayout
                    android:layout_width = "fill_parent"
                    android:layout_height = "0dp"
                    android:layout_weight = "1" >
                    <Button
			            android:id="@+id/history"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_centerInParent = "true"
			            android:text="History" 
			            android:visibility = "invisible"/>                    
                </RelativeLayout>  
                <RelativeLayout
                    android:layout_width = "fill_parent"
                    android:layout_height = "0dp"
                    android:layout_weight = "1" >
                    <Button
			            android:id="@+id/edit_acct"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_centerInParent = "true"
			            android:text="Edit Acc't" 
			            android:visibility = "invisible"/>                    
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width = "fill_parent"
                    android:layout_height = "0dp"
                    android:layout_weight = "1" >                   
                </RelativeLayout>               
            </LinearLayout> 
	    </RelativeLayout>
    </LinearLayout>
</LinearLayout>